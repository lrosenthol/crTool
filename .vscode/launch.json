{
  // Debug configurations
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'c2pa-testfile-maker'",
      "cargo": {
        "args": [
          "build",
          "--bin=c2pa-testfile-maker",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "c2pa-testfile-maker",
          "kind": "bin"
        }
      },
      "args": [
        "--manifest", "examples/simple_manifest.json",
        "--input", "testfiles/Dog.jpg",
        "--output", "target/debug_output.jpg",
        "--cert", "examples/certs/es256_cert.pem",
        "--key", "examples/certs/es256_private.pem"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "c2pa-testfile-maker",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=integration_tests",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "integration_tests",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}

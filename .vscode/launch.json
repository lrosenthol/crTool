{
    // Debug configurations
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "simple w/JPG",
            "cargo": {
                "args": [
                    "build",
                    "--bin=c2pa-testfile-maker",
                    "--package=c2pa-testfile-maker"
                ],
                "filter": {
                    "name": "c2pa-testfile-maker",
                    "kind": "bin"
                }
            },
            "args": [
                "-m",
                "examples/simple_manifest.json",
                "-i",
                "testfiles/Dog.jpg",
                "-o",
                "target/output/simple_output.jpg",
                "-c",
                "tests/fixtures/certs/ed25519.pub",
                "-k",
                "tests/fixtures/certs/ed25519.pem",
                "--allow-self-signed"
            ],
            "cwd": "${workspaceFolder}"
        },
